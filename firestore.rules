rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // Authenticated users can read any user's profile (for display name lookups)
      allow get: if request.auth != null;
      // Users can only create, update, or delete their own profile
      allow create, update, delete: if request.auth.uid == userId;
    }
    match /users {
      // Authenticated users can list the users collection to search by display name
      allow list: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
